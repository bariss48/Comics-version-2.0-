<!DOCTYPE html>
<html lang="en">
    <!-- Basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- Site Metas -->
    <title>Iron-Man</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    
    <!-- Site Icons -->
    <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">
    
    <!-- Design fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet"> 

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.css" rel="stylesheet">

    <!-- FontAwesome Icons core CSS -->
    <link href="/css/font-awesome.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/style.css" rel="stylesheet">

    <!-- Responsive styles for this template -->
    <link href="/css/responsive.css" rel="stylesheet">

    <!-- Colors for this template -->
    <link href="/css/colors.css" rel="stylesheet">

    <!-- Version Tech CSS for this template -->
    <link href="/css/version/tech.css" rel="stylesheet">
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div id="wrapper">
        <header class="tech-header header">
            <div class="container-fluid">
                <nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">
                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" href="/comics"><img src="/img/boom.png" alt=""></a>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/comics">Comics</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Category</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                  <li><a class="dropdown-item" href="/comics/genre/horror">Horror</a></li>
                                  <li><a class="dropdown-item" href="/comics/genre/fantastic">Fantastic</a></li>
                                  <li><hr class="dropdown-divider"></li>
                                  <li><a class="dropdown-item" href="/comics/genre/superhero">Super-hero</a></li>
                                </ul>
                              </li>
                            <% if (user){ %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/comics/new">Add Comic</a>
                                </li> 
                                <% } %>  
                                <% if(user){ %>                   
                                <li class="nav-item">
                                    <a class="nav-link" href="/logout">Log-Out</a>
                                </li>
                                <% }else { %> 
                                <li class="nav-item">
                                    <a class="nav-link" href="/signup">Sign-Up</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/login">Log-In</a>
                                </li>
                                <% } %> 
                        </ul>
                        <ul class="navbar-nav mr-2">
                            <% if (successMessage && successMessage.length > 0) { %> 
                                <div class="alert alert-success fade show" role="alert">
                                    <%= successMessage %> 
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                </div>
                          <% } %> 
                          <% if (errorMessage && errorMessage.length > 0) { %> 
                                <div class="alert alert-warning fade show" role="alert">
                                    <%= errorMessage %> 
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                               </div>
                          <% } %> 
                        </ul>
                        <ul class="navbar-nav mr-2">
                            <form class="d-flex" action="/comics/search" method="GET">
                                <input class="form-control me-2" type="search" placeholder="Search" name="term" aria-label="Search">
                                <button class="btn btn-outline-success" type="submit"><a> Search </a></button>  
                              </form>
                        </ul>
                    </div>
                </nav>
            </div><!-- end container-fluid -->
        </header><!-- end market-header -->
        <section class="section">
            <div class="container">
                <div class="row">
                        <div class="page-wrapper">   
                            <br></br>
                            <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                                <div class="blog-top clearfix">
                                    <h4 class="pull-left">Recent Comics <a href="#"><i class="fa fa-rss"></i></a></h4>
                                </div><!-- end blog-top -->                      
                            <% comics.forEach((comic) => { %>
                                <h6></h6>
                            <div class="blog-list clearfix">
                                <div class="blog-box row">
                                    <div class="col-md-4">
                                        <div class="post-media">
                                            <a href="/comics/<%= comic._id %>" title="">
                                                <img src="<%= comic.image_link %>" alt="" class="img-fluid">
                                                <div class="hovereffect"></div>
                                            </a>
                                        </div><!-- end media -->
                                    </div><!-- end col -->
                                    <div class="blog-meta big-meta col-md-8">
                                        <h4><a href="/comics/<%= comic._id %>" title=""><%= comic.title %></a></h4>
                                        <h5>Series :<%= comic.series  %></h5>
                                        <h5>Author :<%= comic.author  %></h5>
                                        <h5>Publisher :<%= comic.publisher  %></h5>
                                        <a href="/comics/<%= comic._id %>"><h5>Click for Read</h5></a>
                                        <small class="firstsmall"><a class="bg-orange" href="/comics/<%= comic._id %>" title="">Read More</a></small>
                                        <small><a title=""><%= comic.date  %> </a></small>
                                        <small><a title=""><%= comic.author %></a></small>
                                        <small><a title=""><i class="fa fa-eye"></i> 1114</a></small>
                                    </div><!-- end meta -->
                                </div><!-- end blog-box -->
                                   <!-- end media -->
                                    </div><!-- end col -->
                                    <% })  %>
                        </div><!-- end blog-box -->
                </div>
            </div>
        </div>
            <!-- end page-wrapper -->
     </section>
    </div>
        <div class="dmtop">Scroll to Top</div>
    <!-- Core JavaScript
    ================================================== -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/tether.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/custom.js"></script>
</body>
</html>   